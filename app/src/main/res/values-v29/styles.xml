<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash theme. -->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/ic_splash_container</item>
    </style>

    <!-- Headline. -->
    <style name="Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/alegreya</item>
        <item name="android:fontFamily">@font/alegreya</item>
    </style>
</resources>